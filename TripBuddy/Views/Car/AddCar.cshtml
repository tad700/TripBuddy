@using TripBuddy.Areas.Identity.Data
@model Car

<head>
    <link rel="stylesheet"  href="C:\Users\Todor\source\repos\TripBuddy\TripBuddy\wwwroot\css\site.css" />
</head>
<body>

    <h2>Add a New Car</h2>

    <form asp-action="AddCar" method="post">

        <div class="form-group">
            <label asp-for="Manufacturer">Manufacturer</label>
            <input asp-for="Manufacturer" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Model">Model</label>
            <input asp-for="Model" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="YearOfProduction">Year Of Production</label>
            <input asp-for="YearOfProduction" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="FuelConsumption">Fuel Consumption</label>
            <input asp-for="FuelConsumption" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="FuelType">Fuel Type</label>
            <select asp-for="FuelType" asp-items="ViewBag.FuelTypeOptions" class="form-control"></select>
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FuelTankCapacity">Fuel Tank Capacity</label>
            <input asp-for="FuelTankCapacity" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="HorsePower">HP</label>
            <input asp-for="HorsePower" class="form-control" />
        </div>

        <!-- Include other properties of the CarViewModel -->

        <button type="submit" class="btn btn-primary">Add Car</button>
    </form>

</body>
