@model TripBuddy.Areas.Identity.Data.Trip
@using TripBuddy.Areas.Identity.Data
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
@using (Html.BeginForm("TripIndex", "Trip", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="CarID" class="control-label">Select Car:</label>
        <select asp-for="CarID" asp-items="ViewBag.CarList" class="form-control"></select>
        <span asp-validation-for="CarID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Distance" class="control-label">Distance:</label>
        <input asp-for="Distance" class="form-control" />
        <span asp-validation-for="Distance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fuel_Price" class="control-label">Fuel Price:</label>
        <input asp-for="Fuel_Price" class="form-control" />
        <span asp-validation-for="Fuel_Price" class="text-danger"></span>
    </div>
    <div>
        @if (ViewData.ModelState.IsValid)
        {
            @if (ViewBag.fuelNeeded != null && ViewBag.priceForTrip != null)
            {
                <p>you will need: @string.Format("{0:0.##}", ViewBag.fuelNeeded) liters of fuel</p>
                <p>you will need: @string.Format("{0:0.##}", ViewBag.priceForTrip) BGN for the trip</p>
            }

        }
  

   

    </div>
 
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
